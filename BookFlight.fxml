         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="DateField" layoutX="428.0" layoutY="100.0" promptText="Enter Date" />
      <TextField fx:id="LocationField" layoutX="149.0" layoutY="100.0" promptText="Enter Location" />
      <Label fx:id="LocationLabel" layoutX="201.0" layoutY="67.0" text="Location" />
      <Label fx:id="DateLabel" layoutX="490.0" layoutY="67.0" text="Date" />
      <TextArea fx:id="FlightData" editable="false" layoutX="263.0" layoutY="224.0" prefHeight="200.0" prefWidth="200.0" text="Available Flights" wrapText="true" />
